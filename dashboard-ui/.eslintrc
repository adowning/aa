env:
  browser: true
  commonjs: true
  es6: true
  node: true
extends: 'eslint:recommended'
parserOptions:
  ecmaFeatures:
    experimentalObjectRestSpread: true
    jsx: true
  sourceType: module
plugins:
  - react
rules:
  linebreak-style:
    - error
    - unix
  semi:
    - error
    - always
  eqeqeq: error
  no-empty: warn
  no-console: off
  no-unused-vars: off
